<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="TuckBoxApp.Views.RegisterPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Register">
    
    <ScrollView>
        <Grid RowDefinitions="Auto,*" RowSpacing="20" Padding="20">
            
            <!-- Header -->
            <VerticalStackLayout Grid.Row="0" Spacing="10">
                <Label Text="Create Account" 
                       FontSize="28" 
                       FontAttributes="Bold" 
                       HorizontalOptions="Center"/>
                <Label Text="Join Tuck Box today" 
                       FontSize="16" 
                       HorizontalOptions="Center" 
                       TextColor="Gray"/>
            </VerticalStackLayout>
            
            <!-- Form -->
            <VerticalStackLayout Grid.Row="1" Spacing="15">
                <Frame BackgroundColor="White" Padding="15" HasShadow="True">
                    <VerticalStackLayout Spacing="15">
                        
                        <!-- Full Name -->
                        <VerticalStackLayout Spacing="5">
                            <Label Text="Full Name" FontSize="14" FontAttributes="Bold"/>
                            <Entry Text="{Binding FullName}" 
                                   Placeholder="Enter your full name"/>
                        </VerticalStackLayout>
                        
                        <!-- Email -->
                        <VerticalStackLayout Spacing="5">
                            <Label Text="Email" FontSize="14" FontAttributes="Bold"/>
                            <Entry Text="{Binding Email}" 
                                   Placeholder="Enter your email" 
                                   Keyboard="Email"/>
                        </VerticalStackLayout>
                        
                        <!-- Mobile Number -->
                        <VerticalStackLayout Spacing="5">
                            <Label Text="Mobile Number" FontSize="14" FontAttributes="Bold"/>
                            <Entry Text="{Binding MobileNumber}" 
                                   Placeholder="Enter your mobile number" 
                                   Keyboard="Telephone"/>
                        </VerticalStackLayout>
                        
                        <!-- Password -->
                        <VerticalStackLayout Spacing="5">
                            <Label Text="Password" FontSize="14" FontAttributes="Bold"/>
                            <Entry Text="{Binding Password}" 
                                   Placeholder="Enter password (min 6 characters)" 
                                   IsPassword="True"/>
                        </VerticalStackLayout>
                        
                        <!-- Confirm Password -->
                        <VerticalStackLayout Spacing="5">
                            <Label Text="Confirm Password" FontSize="14" FontAttributes="Bold"/>
                            <Entry Text="{Binding ConfirmPassword}" 
                                   Placeholder="Confirm your password" 
                                   IsPassword="True"/>
                        </VerticalStackLayout>
                        
                        <!-- Error/Success Messages -->
                        <Label Text="{Binding ErrorMessage}" 
                               TextColor="Red" 
                               IsVisible="{Binding ErrorMessage, Converter={x:StaticResource StringToBoolConverter}}"/>
                        <Label Text="{Binding SuccessMessage}" 
                               TextColor="Green" 
                               IsVisible="{Binding SuccessMessage, Converter={x:StaticResource StringToBoolConverter}}"/>
                        
                        <!-- Register Button -->
                        <Button Text="Create Account" 
                                Command="{Binding RegisterCommand}" 
                                IsEnabled="{Binding IsNotBusy}"
                                BackgroundColor="{DynamicResource Primary}"
                                TextColor="White"
                                CornerRadius="10"
                                HeightRequest="50"/>
                        
                        <!-- Back to Login -->
                        <Button Text="Back to Login" 
                                Command="{Binding GoBackCommand}" 
                                BackgroundColor="Transparent" 
                                TextColor="Gray"
                                BorderColor="Transparent"/>
                        
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
            
        </Grid>
    </ScrollView>
</ContentPage>