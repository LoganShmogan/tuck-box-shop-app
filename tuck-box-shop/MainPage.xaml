<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="tuck_box_shop.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            >

            <Image
                Source="logo.svg"
                Aspect="AspectFit"
                />

            <Label
                Text="Email" 
                TextColor="White"
                />
            <Entry
                Text="email@example.com" 
                TextColor="White"
                />

            <Label
                Text="Password"
                TextColor="White"
                />
            <Entry
                Text="********" 
                TextColor="White"
                />

            <Button
                Text="Log In"
                />
            <Button
                Text="Sign Up"
                />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
